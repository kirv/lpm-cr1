        voltDiff({{DVAR:judd_dist}}(4), 1, mV5000, {{J4__DIFF:1}}, True, 0, _60Hz, {{DMULT:0.25}}, 0) 
        portSet({{J1J4_EN__CP:1}}, 0)              

        portSet({{J2J5_EN__CP:1}}, 1)              
        delay(0,800,MSEC)

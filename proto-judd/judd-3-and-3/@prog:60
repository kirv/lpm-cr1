        voltDiff({{DVAR:judd_dist}}(5), 1, mV5000, {{J5__DIFF:1}}, True, 0, _60Hz, {{DMULT:0.25}}, 0) 
        portSet({{J2J5_EN__CP:1}}, 0)              


sub lpm_set_clock(id as long)
    dim logger_time(9) as long
    '' config mode is required to set the LPM clock
    realtime(logger_time) '' 1:year, 2:month, 3:day, 4:hour, 5:minute, 6:second
    thies_query(id,"ZS", logger_time(6))
    thies_query(id,"ZM", logger_time(5))
    thies_query(id,"ZH", logger_time(4))
    thies_query(id,"ZD", logger_time(3))
    thies_query(id,"ZN", logger_time(2))
    thies_query(id,"ZY", logger_time(1) mod 100)
endsub
